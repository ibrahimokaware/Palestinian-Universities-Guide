<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Fragments.ProgramsFragment">

    <Button
        android:id="@+id/bt_diploma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:background="@drawable/programs_bt_bg"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:text="برامج الدبلوم" />

    <Button
        android:id="@+id/bt_bachelor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/programs_bt_bg"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:text="برامج البكالوريوس" />

    <Button
        android:id="@+id/bt_graduate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/programs_bt_bg"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:text="برامج الدراسات العليا" />
</LinearLayout>