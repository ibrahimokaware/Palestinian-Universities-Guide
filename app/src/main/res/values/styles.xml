<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="AppThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="AppThemeNoStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#FAFAFA</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="CustomToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">?colorControlNormal</item>
        <item name="actionOverflowButtonStyle">@style/myOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
        <item name="android:fontFamily">@font/font</item>
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="myOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="CustomTabText" parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="CustomTabText2" parent="Widget.Design.TabLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="CustomSpinnerTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">?colorControlNormal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="md_no_bar" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="no_bar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
    </style>
</resources>